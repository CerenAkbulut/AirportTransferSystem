<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                
                {{ include('user/usermenu.html.twig') }}

                <table class="table">
                    <tr>
                        <td> cars : </td>
                        <td>{{ cars.title }}</td>
                    </tr>
                    <tr>
                        <td> Vehicle: </td>
                        <td>{{ vehicles.title }}</td>
                    </tr>
                    <tr>
                        <td> From : </td>
                        <td>{{ fromdest }}</td>
                    </tr>
                    <tr>
                        <td> To : </td>
                        <td>{{ todest }}</td>
                    </tr>
                    <tr>
                        <td> price : </td>
                        <td>{{ vehicles.price }}</td>
                    </tr>
